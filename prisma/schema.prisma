generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// CUID = Collision-resistent Unique IDentifier
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userName  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
